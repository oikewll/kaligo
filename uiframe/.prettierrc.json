{
  "useTabs": false,
  "singleQuote": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": ["*.json", "*.yml", "*.md,", "*.*rc"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.js", "*.vue", "*.less", "*.sass", "*.scss"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
